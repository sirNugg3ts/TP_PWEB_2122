@model IEnumerable<TPPweb2122.Models.Reserva>

@{
    ViewData["Title"] = "Index";
}
@if (User.IsInRole("Cliente"))
{
    <a class="btn btn-primary" asp-controller="Reservas" asp-action="Create">Reservar</a>
    <a class="btn btn-primary" asp-controller="Reservas" asp-action="Historico">Historico</a>
    
}
 <h1>Reservas</h1>
  
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.dataEntrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dataSaida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imovel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Confirmacao)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.dataEntrada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dataSaida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imovel.NomeAlojamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Confirmacao)
            </td>
            <td>
                  
                    @if (User.IsInRole("Gestor") || User.IsInRole("Funcionario"))
                    {
                        <a class="btn btn-primary m-1" asp-action="Edit" asp-route-id="@item.ReservaId">Edit</a>
                        <a class="btn btn-info m-1" asp-action="Details" asp-route-id="@item.ReservaId">Details</a>
                    }
               
                <a class="btn btn-danger m-1" asp-action="Delete" asp-route-id="@item.ReservaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
