@model TPPweb2122.Models.Reserva

@{
    ViewData["Title"] = "Edit";
}
<div class ="container p-2 rounded" style="background-color:white">

<h1>Editar</h1>

<h4>Reserva</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            



            <div class="form-group">
                <label asp-for="dataEntrada" class="control-label"></label>
                <input asp-for="dataEntrada" class="form-control" disabled />
                <span asp-validation-for="dataEntrada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dataSaida" class="control-label"></label>
                <input asp-for="dataSaida" class="form-control" disabled/>
                <span asp-validation-for="dataSaida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImovelId" class="control-label"></label>
                <select asp-for="ImovelId" class="form-control" asp-items="ViewBag.ImovelId" disabled></select>
                <span asp-validation-for="ImovelId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                   Confirmado @Html.EditorFor(x => x.Confirmacao)
                </label>
                <span asp-validation-for="Confirmacao" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ReservaId" />
            <input type="hidden" asp-for="ClienteId" />
            <input type="hidden" asp-for="Cliente" />
            <input type="hidden" asp-for="Imovel" />
            <input type="hidden" asp-for="dataEntrada" />
            <input type="hidden" asp-for="dataSaida" />
            <input type="hidden" asp-for="ImovelId" />
            <div class="form-group">
                <input type="submit" value="Atualizar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class ="btn btn-primary"asp-action="Index">Voltar à Lista</a>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
