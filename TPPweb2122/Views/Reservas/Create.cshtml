@model TPPweb2122.Models.Reserva

@{
    ViewData["Title"] = "Create";
}
<div class ="container p-2 rounded" style="background-color:white">

<h1>Criar</h1>

<h4>Reserva</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="dataEntrada" class="control-label"></label>
                <input asp-for="dataEntrada" class="form-control" />
                <span asp-validation-for="dataEntrada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dataSaida" class="control-label"></label>
                <input asp-for="dataSaida" class="form-control" />
                <span asp-validation-for="dataSaida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImovelId" class="control-label"></label>
                <select asp-for="ImovelId" class ="form-control" asp-items="ViewBag.ImovelId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Reservar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary"asp-action="Index">Voltar à lista</a>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
