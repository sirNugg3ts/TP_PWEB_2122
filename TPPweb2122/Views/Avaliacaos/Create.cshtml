@model TPPweb2122.Models.Avaliacao

@{
    ViewData["Title"] = "Create";
}
<div class="container p-2 rounded" style="background-color:white;">

<h1>Criar</h1>

<h4>Avaliação</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PontuacaoAvaliacao" class="control-label">Pontuação</label>
                <input asp-for="PontuacaoAvaliacao" class="form-control" />
                <span asp-validation-for="PontuacaoAvaliacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescricaoAvaliacao" class="control-label">Descrição</label>
                <input asp-for="DescricaoAvaliacao" class="form-control" />
                <span asp-validation-for="DescricaoAvaliacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImovelId" class="control-label">Imóvel</label>
                <select asp-for="ImovelId" class ="form-control" asp-items="ViewBag.ImovelId"></select>
            </div>
     
            <div class="form-group">
                <input type="submit" value="Avaliar" class="btn btn-success" />
            </div>
        </form>
        <div>
    <a class="btn btn-primary" asp-action="Index">Voltar à lista</a>
</div>
    </div>
</div>


</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
