<!--===============================================================================================-->	
	<link rel="stylesheet" type="text/css" href="/vendor/css-hamburgers/hamburgers.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/animsition/css/animsition.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/select2/select2.min.css">
<!--===============================================================================================-->	
	<link rel="stylesheet" type="text/css" href="/vendor/daterangepicker/daterangepicker.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/css/util.css">
	<link rel="stylesheet" type="text/css" href="/css/main.css">
<!--===============================================================================================-->

<div class="limited">
    <div class ="container-login100">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <span class="login100-form-title p-b-49">
						Registar
					</span>

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="wrap-input100 m-b-23">
					<span class="label-input100">Email</span>
					<input class="input100" type="text" asp-for="Input.Email" class="form-control" />
					<span class="focus-input100" data-symbol="&#xf206;" asp-validation-for="Input.Email" class="text-danger"></span>	
				</div>
                <div class="wrap-input100 m-b-23">
					<span class="label-input100">Nome</span>
					<input class="input100" type="text" asp-for="Input.Nome" class="form-control" />
					<span class="focus-input100" data-symbol="&#xf206;" asp-validation-for="Input.Nome" class="text-danger"></span>	
				</div>

                <div class="wrap-input100 m-b-23">
					<span class="label-input100">Nome</span>
					<input class="input100" type="text" asp-for="Input.Morada" class="form-control" />
					<span class="focus-input100" data-symbol="&#xf206;" asp-validation-for="Input.Morada" class="text-danger"></span>	
				</div>

                <div class="wrap-input100 m-b-23">
					<span class="label-input100">Telefone</span>
					<input class="input100" asp-for="Input.Telefone" class="form-control" />
					<span class="focus-input100" data-symbol="&#xf206;" asp-validation-for="Input.Telefone" class="text-danger"></span>	
				</div>

                <div class="wrap-input100">
						 <span class="label-input100">Password</span>
						<input class="input100" type="password" asp-for="Input.Password" class="form-control" />
						<span class="focus-input100" data-symbol="&#xf190;" asp-validation-for="Input.Password" class="text-danger"></span>

					</div>

                    <div class="wrap-input100">
						 <span class="label-input100">Confirmar Password</span>
						<input class="input100" type="password" asp-for="Input.ConfirmPassword" class="form-control" />
						<span class="focus-input100" data-symbol="&#xf190;" asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
					</div>

                     <div class="wrap-input100 m-b-23">
					<span class="label-input100">Tipo de Conta</span>
					<select class="input100" asp-for="Input.RoleId" asp-items="@TPPweb2122.Roles.RoleUtils.RegistSelectList" >
                        <option value="">Selecione Tipo de Conta</option>
                    </select>
					<span class="focus-input100" data-symbol="&#xf206;" asp-validation-for="Input.RoleId" class="text-danger"></span>	
				</div>
                <button type="submit" class="btn btn-primary">Registar</button>
            </form>
    </div>

</div>

</div>

	
